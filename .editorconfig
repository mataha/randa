root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,cmd,url}]
# See https://github.com/editorconfig/editorconfig/issues/209
charset = latin1
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2
